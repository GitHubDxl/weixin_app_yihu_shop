/* pages/intro/intro.wxss */

.infos {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
  width: 100%;
  border-bottom: 1px solid #ccc;
  align-items: center;
}

.infos image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 55rpx;
}

.infos text {
  margin: 10rpx 0 0;
}

.txt {
  width: 100%;
}

.txt text:first-child {
  margin-bottom: 8rpx;
}

.scroll_max {
  width: 100%;
  white-space: nowrap;
  padding-top: 0;
  border-bottom: 1px solid #ccc;
  /*display: flex;
  flex-direction: row;*/
}

.scroll_list {
  width: 268rpx;
  display: inline-block;
  flex-direction: column;
  margin-right: 10rpx;
}

.scroll_list text {
  display: inline-block;
  width: 100%;
  padding-top: 14rpx;
}

.scroll_list image {
  width: 100%;
  height: 198rpx;
  display: block;
  border-radius: 25rpx;
}

.year_title {
  display: inline-block;
  width: 100%;
  text-align: left;
  padding: 30rpx;
  box-sizing: border-box;
}

.scroll_year {
  white-space: nowrap;
}

.scroll_year text {
  padding-right: 45rpx;
}

.words_list {
  width: 100%;
  flex-direction: row;
  padding: 0 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
  flex-wrap: wrap;
  text-align: center;
}

.words_item {
  flex-direction: column;
  margin-bottom: 30rpx;
  position: relative;
}

.words_item image {
  width: 336rpx;
  height: 246rpx;
  border-radius: 15rpx;
}

.words_item text {
  margin-top: 20rpx;
  font-size: 30rpx;
}

.sel_year {
  font-size: 26rpx;
  font-weight: bold;
  color: #132051;
}

.words_item .is_shop {
  position: absolute;
  top: 160rpx;
  left: 10rpx;
  width: 76rpx;
  height: 76rpx;
}

.show_all {
  font-size: 30rpx;
  color: #132051;
  justify-content: flex-end;
}

.infos_hide text {
  width: 690rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
