/*index.css*/

.header {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin: 30rpx 0 20rpx 0;
}

.header scroll-view {
  width: 100%;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.header image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin: 0 30rpx;
}

.header .sel_photo {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
}

.head_bor {
  height: 2rpx;
  width: 690rpx;
  display: flex;
}

.slide {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 800rpx;
  border-radius: 25rpx;
  margin-top: 30rpx;
  box-shadow: 0 5rpx 35rpx #93a8c6;
}

.slide swiper {
  height: 100%;
  width: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
  border-radius: 25rpx;
}

.bottom_up_btn {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bottom_up_btn image {
  width: 34rpx;
  height: 32rpx;
  margin: 15rpx 0 7rpx;
}

.bottom_up_btn text {
  font-size: 28rpx;
  color: #6e6e6e;
}

.bottom_up_btn .bold {
  color: #36465d;
  font-size: 28rpx;
  font-weight: bold;
}
