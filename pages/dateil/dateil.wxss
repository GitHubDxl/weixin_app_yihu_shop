/* pages/dateil/dateil.wxss */

.banner {
  width: 100%;
  height: 270rpx;
}

.author {
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
  align-items: center;
}

.author_info {
  flex-direction: row;
  align-items: center;
}

.author_info image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.author_info text {
  margin-left: 20rpx;
  text-align: left;
}

.ico_next {
  display: block;
  width: 20rpx;
  height: 36rpx;
}

.shop_infos {
  padding: 30rpx;
  box-sizing: border-box;
  width: 100%;
  border-bottom: 1rpx solid #eee;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.txt_left {
  flex-direction: column;
}

.txt_left .gray {
  padding-top: 10rpx;
}

.txt_right {
  font-size: 42rpx;
  color: #f33a3a;
  font-weight: bold;
}

.shop_protos {
  flex-direction: column;
  width: 100%;
  border-bottom: 1rpx solid #eee;
}

.protos {
  flex-direction: column;
  justify-content: flex-start;
}

.proto_item {
  flex-direction: row;
  padding-bottom: 30rpx;
}

.proto_item:last-child {
  padding: 0;
}

.proto_name {
  width: 180rpx;
  font-size: 32rpx;
  color: #555;
}

.proto_money {
  font-size: 32rpx;
  color: #f33a33;
  font-weight: bold;
}

.proto_item image {
  width: 36rpx;
  height: 36rpx;
  padding-right: 30rpx;
}

.discuss_main {
  width: 100%;
  flex-direction: column;
  border-bottom: 1rpx solid #eee;
}

.title {
  flex-direction: row;
  justify-content: space-between;
}

.title text:first-child {
  color: #555;
  font-size: 32rpx;
}

.title text:last-child {
  font-size: 26rpx;
  color: #4375be;
}

.discusss {
  width: 100%;
  padding-top: 20rpx;
  flex-direction: row;
  flex-wrap: wrap;
}

.label {
  text-align: center;
  padding: 8rpx 17rpx;
  font-size: 28rpx;
  color: #36465d;
  border: 3rpx solid #132051;
  margin-right: 20rpx;
}

.txt_title {
  width: 100%;
  text-align: left;
}

.imgs {
  width: 100% !important;
  padding: 0 30rpx !important;
  box-sizing: border-box;
  flex-direction: column;
  font-size: 32rpx !important;
  line-height: 1.7 !important;
}

.imgs view {
  width: 100% !important;
}

.imgs image {
  width: 100% !important;
  display: block !important;
  padding-bottom: 20rpx !important;
}

.bottom_btns {
  width: 100%;
  height: 84rpx;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  background: #fff;
}

.bottom_btn {
  width: calc(100% /4);
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.bottom_btn text {
  color: #aeaeae;
  font-size: 24rpx;
}

.ico_btn {
  width: 35rpx;
  height: 34rpx;
}

.bottom_btn .txt_btn {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  text-align: center;
  line-height: 84rpx;
  color: #fff;
}

.buy {
  background: #4375be;
}

.shop_car {
  background: #36465d;
}
